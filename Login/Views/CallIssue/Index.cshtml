@{
	Layout="~/Views/Shared/_NewLayout1.cshtml";
}
@model IEnumerable<Login.Models.Issue>

@{
    ViewData["Title"] = "Index";
}

<h1>ลงทะเบียนเรียน</h1>

<p>
    <button class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <a asp-action="Create" class="text-xs font-weight-bold text-warning text-uppercase mb-1">Create New</a>
    </button>
    
</p>
<table class="table">
    <div>
        
         <form asp-action="Index"  method="get">
            <input type="text" name="search" />
            <button type="submit" class="btn btn-success">Submit</button> 
        </form>
   
       
    </div>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.score)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
          

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.score)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
         
            <td>
               <button class="d-none d-sm-inline-block btn btn-sm btn-Success shadow-sm"> @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |</button>
               <button class="d-none d-sm-inline-block btn btn-sm btn-Warning shadow-sm"> @Html.ActionLink("Details", "Details", new {  id=item.Id })|</button>
               <button class="d-none d-sm-inline-block btn btn-sm btn-danger shadow-sm"> @Html.ActionLink("Delete", "Delete", new {  id=item.Id  })|</button>
              
            </td>
        </tr>
}
    </tbody>
</table>
